<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:id="@+id/cronometro"
            android:background="@drawable/img_cronometro">
            <TextView
                android:id="@+id/tiempo_mili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:text="3"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="90sp"
                android:textColor="#00e676"
                android:gravity="top"
                android:text="3"
                android:layout_weight="0.40"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color aleatorio"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/color_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rojo"
                android:textSize="65sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_1"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/img_amarillo" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_2"
            android:layout_margin="2dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/img_3"
            android:layout_margin="2dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/img_4"
            android:layout_margin="2dp"
            android:elevation="1dp"
            android:focusableInTouchMode="false"
            android:background="@android:color/transparent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <Button
            android:id="@+id/pausar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pausar Juego"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/continuar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reiniciar Partida"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>
